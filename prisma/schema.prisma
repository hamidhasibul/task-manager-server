generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  tasks Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  dueDate     DateTime
  priority    String
  status      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
}
